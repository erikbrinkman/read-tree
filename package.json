{
  "name": "read-tree",
  "version": "0.0.1",
  "description": "A parse5 tree adapter that works with Readability",
  "keywords": [
    "parse5",
    "readability",
    "tree adapter"
  ],
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "module": "bundle/read-tree.esm.min.js",
  "types": "dist/index.d.ts",
  "main": "bundle/read-tree.cjs.min.js",
  "unpkg": "bundle/read-tree.iife.min.js",
  "files": [
    "/bundle/*.js",
    "/dist/**/*.js",
    "/dist/**/*.d.ts"
  ],
  "scripts": {
    "fmt": "prettier --write --cache 'src/*.ts' '*.json' bundle.mjs",
    "lint:eslint": "eslint --cache src/*.ts bundle.mjs",
    "lint:doc": "typedoc --emit none",
    "lint": "tsc && yarn lint:eslint && yarn lint:doc",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:bundle": "rm -rf bundle && node bundle.mjs",
    "build": "yarn build:ts && yarn build:bundle",
    "test": "jest --coverage",
    "prepack": "yarn lint && jest --clear-cache && yarn test && yarn build",
    "doc": "typedoc"
  },
  "packageManager": "yarn@3.2.4",
  "dependencies": {
    "parse5": "^7.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@mozilla/readability": "^0.4.2",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/eslint": "^8.4.6",
    "@types/jest": "^29.1.2",
    "@types/jsdom": "^20.0.0",
    "@types/prettier": "^2.7.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.15",
    "babel-jest": "^29.1.2",
    "chalk": "5.1.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-spellcheck": "^0.0.19",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.1.2",
    "jsdom": "^20.0.1",
    "lorem-ipsum": "^2.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "spellcheck",
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "no-console": "error",
      "tsdoc/syntax": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "skipWords": [
            "cdata",
            "doctype",
            "enums",
            "iife",
            "mozilla",
            "namespace",
            "readtree",
            "reprehenderit",
            "srcset"
          ],
          "minLength": 4
        }
      ]
    }
  }
}
